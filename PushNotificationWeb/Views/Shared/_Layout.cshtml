@using PushNotification.WebSites.Web.UserAccountWrappers
@using PushNotification.WebSites.Web.Infrastructure
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/redmond/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>   
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>
                    Windows 8 Cloud Application Services</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div style="clear: both;">
            </div>
            <nav>
                <ul id="menu">
                    @Html.MenuItem("Home", "Index", "Home")
                    @if (MembershipHelper.IsUserAdmin())
                    {
                        @Html.MenuItem("Push Notifications", "Index", "PushNotification")                        
                        @Html.MenuItem("Blobs", "Index", "Blob")
                    }
                    @if (!MembershipHelper.IsUserLoggedIn())
                    {
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    }
                    
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
